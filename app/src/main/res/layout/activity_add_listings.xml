<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#65557C"
    tools:context=".AddListings">

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:background="#F6F3F3"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_backbtn" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Add Listing"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.264"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.487" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="346dp"
        android:layout_height="610dp"
        android:scrollbarSize="2dp"
        android:verticalScrollbarPosition="defaultPosition"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F4EFEF"
            app:cardBackgroundColor="#6BEA5F25"
            app:cardCornerRadius="30dp"
            app:cardElevation="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#E4DBF0"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/uploadImg"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/design_default_color_on_primary"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/w800x533" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:text="House Name"
                    android:textColor="#0B0808"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtHouseName"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:fontFamily="sans-serif"
                    android:hint="House Name"
                    android:paddingBottom="10dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#060607"
                    android:textColorLink="#100A0A" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:fontFamily="monospace"
                    android:text="House Address"
                    android:textColor="#0F0C0C"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtHouseAddress"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="House Address"
                    android:paddingBottom="10dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#0D0D0F" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:fontFamily="monospace"
                    android:text="House Size"
                    android:textColor="#141010"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtArea"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="Area (sq. m)"
                    android:paddingBottom="10dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#040405" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:fontFamily="monospace"
                    android:text="Number of Bedrooms"
                    android:textColor="#0D0909"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtNumBedroom"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="Number of Bedroom"
                    android:paddingBottom="10dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#111214" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:fontFamily="monospace"
                    android:text="Quality (1-10)"
                    android:textColor="#0B0505"
                    android:textColorLink="#090505"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtQuality"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="Quality (1-10)"
                    android:paddingBottom="10dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#101114"
                    android:textColorLink="#F6F3F3" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:fontFamily="monospace"
                    android:text="Age (in years)"
                    android:textColor="#0B0707"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtAge"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="Age (in years)"
                    android:paddingBottom="10dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#0F0F10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/predictPriceBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#B85B5B"
                        android:backgroundTint="@color/black"
                        android:onClick="predictPrice"
                        android:text="Predict Price" />

                    <Button
                        android:id="@+id/predictedPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#9B2D2D"
                        android:backgroundTint="#3A1313"
                        android:text="Predict Price"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>

    <Button
        android:id="@+id/saveListingBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Save Listing"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

</androidx.constraintlayout.widget.ConstraintLayout>